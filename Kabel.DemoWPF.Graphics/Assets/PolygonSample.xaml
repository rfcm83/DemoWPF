<UserControl x:Class="Kabel.DemoWPF.Graphics.Assets.PolygonSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="Polygon">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Polygon Stroke="Red" Points="10,0 20,0 30,10 30,20 20,30 10,30, 0,20 0,10" Margin="188,115,82,155" />
        <Polygon Stroke="Black" Points="50,0 100,80.66 0,80.66"/>
        <Polygon Stroke="Green" Points="10,0 45,0 35,20 0,20" Margin="84,115,170,165"/>
    </Grid>
</UserControl>
