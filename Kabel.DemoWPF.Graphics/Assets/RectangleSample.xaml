<UserControl x:Class="Kabel.DemoWPF.Graphics.Assets.RectangleSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Rectangle Stroke="DarkBlue" Width="150" Height="150" Margin="24,28,125,138" />
        <Rectangle Stroke="DarkGreen" Width="50" Height="25" Margin="201.63,86.413,48.37,188.587" />
        <Rectangle Stroke="Red" Width="75" Height="75" Margin="201.63,194.022,23.37,30.978"/>
    </Grid>
</UserControl>
