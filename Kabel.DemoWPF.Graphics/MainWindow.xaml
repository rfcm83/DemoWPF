<Window x:Class="Kabel.DemoWPF.Graphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="Ellipse" Click="ButtonClick" />
            <Button Grid.Column="0" Grid.Row="1" Content="Line" Click="ButtonClick" />
            <Button Grid.Column="0" Grid.Row="2" Content="Path" Click="ButtonClick" />
            <Button Grid.Column="0" Grid.Row="3" Content="Polygon" Click="ButtonClick" />
            <Button Grid.Column="1" Grid.Row="0" Content="Polyline" Click="ButtonClick" />
            <Button Grid.Column="1" Grid.Row="1" Content="Rectangle" Click="ButtonClick" />
            <Button Grid.Column="1" Grid.Row="2" Content="Image" Click="ButtonClick" />
        </Grid>
    </Grid>
</Window>
